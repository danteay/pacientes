{
  "name": "pacientes",
  "version": "1.0.0",
  "description": "Patient management application built with Electron",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "npm run copy:assets && concurrently \"npm run watch:main\" \"npm run watch:renderer\" \"npm run watch:assets\" \"wait-on dist/main/main.js && electron .\"",
    "watch:main": "tsc -w -p tsconfig.json",
    "watch:renderer": "tsc -w -p tsconfig.renderer.json",
    "watch:assets": "nodemon --watch src/renderer --ext html,css --exec \"npm run copy:assets\"",
    "watch": "npm run watch:main",
    "build": "tsc -p tsconfig.json && tsc -p tsconfig.renderer.json && npm run copy:assets",
    "copy:assets": "mkdir -p dist/renderer && cp src/renderer/*.html src/renderer/*.css dist/renderer/",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rm -rf dist out",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "electron",
    "patient-management",
    "healthcare"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "umzug": "^3.8.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@jest/globals": "^30.2.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "concurrently": "^8.2.2",
    "electron": "^39.2.4",
    "electron-builder": "^25.1.8",
    "eslint": "^8.56.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.4.6",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  }
}
