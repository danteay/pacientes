{
  "name": "Pacientes",
  "version": "1.0.0",
  "description": "Patient management application built with Electron",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "npm run build && electron . --trace-warnings",
    "dev": "concurrently \"npm run watch:main\" \"npm run dev:renderer\" \"wait-on dist/main/main.js && electron .\"",
    "watch:main": "tsc -w -p tsconfig.json",
    "dev:renderer": "vite",
    "build:main": "tsc -p tsconfig.json",
    "build:renderer": "vite build",
    "build": "npm run build:main && npm run build:renderer",
    "postinstall": "npx @electron/rebuild",
    "clean": "rm -rf dist out",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "electron",
    "patient-management",
    "healthcare"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "bulma": "^1.0.4",
    "draft-js": "^0.11.7",
    "draftjs-to-html": "^0.9.1",
    "html-to-draftjs": "^1.5.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-draft-wysiwyg": "^1.15.0",
    "react-router-dom": "^7.10.1",
    "sass": "^1.94.3",
    "sass-embedded": "^1.93.3",
    "umzug": "^3.8.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-dmg": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron/rebuild": "^4.0.1",
    "@jest/globals": "^30.2.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.8",
    "@types/draft-js": "^0.11.20",
    "@types/draftjs-to-html": "^0.8.4",
    "@types/html-to-draftjs": "^1.5.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-draft-wysiwyg": "^1.13.9",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^5.1.2",
    "appdmg": "^0.6.6",
    "concurrently": "^8.2.2",
    "electron": "^39.2.4",
    "electron-builder": "^25.1.8",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5.3.3",
    "vite": "^7.2.7",
    "wait-on": "^7.2.0"
  }
}
